{
  "Serilog": {
    "MinimumLevel": "Verbose",
    "LevelSwitches": {
      "$Verbose": "Verbose"
    },
    "WriteTo": [
      {
        "Name": "Udp",
        "Args": {
          "remoteAddress": "localhost",
          "remotePort": 7071,
          "family": "InterNetwork",
          "formatter": "Serilog.Support.TextFormatters.TextFormatter, Serilog.Sinks.UdpTests",
          "localPort": 0,
          "restrictedToMinimumLevel": "Verbose",
          "levelSwitch": "$Verbose"
        }
      }
    ]
  }
}
